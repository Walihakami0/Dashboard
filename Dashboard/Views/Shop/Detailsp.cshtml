@model ProductDetails

@{

    Layout = "~/Views/Shared/_LayoutNew.cshtml";
    var prod = ViewBag.prod;
}

<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="row">
                    <div class="col-md-6">
                        <div class="images p-3">
                            <div class="text-center"> <img id="main-image" src="@Model.Image" width="100%" height="100%" /> </div>

                        </div>
                    </div>
                    <div class="col-md-6" dir="rtl">
                        <div class="product p-4">
                            <div class="d-flex justify-content-between align-items-center">
                            </div>
                            <div class="mt-4 mb-3">
                                <h5 class="text-uppercase">@prod.ProductName</h5>
                                <div class="price d-flex flex-row align-items-center">

                                </div>
                            </div>
                            <p class="about">@Model.Description</p>
                            <div class="sizes mt-5">
                                <h6 class="text-uppercase">

                                    <script>
                                        document.write("$" + (Math.round(@Model.Price)));
                                    </script>
                                </h6>

                            </div>
                            <form asp-action="Cart" method="post" >
                                <input type="hidden" name="Id" value="@Model.Id" />

                                <div class="cart mt-4 align-items-center"> <button class="btn btn-danger text-uppercase mr-2 px-4">أضف إلى السلة</button></div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
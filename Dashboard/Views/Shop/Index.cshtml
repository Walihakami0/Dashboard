@model IEnumerable<Product>
@{
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
    var prodd = ViewBag.prod;
}
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">

            @foreach (var item in Model)
            {
                @foreach (var pd in prodd)
                {
                    if(item.Id == pd.ProductId)
                    {
                        <div class="col-md-6 col-lg-4 mb-4 mb-md-0 mt-3" dir="rtl">
                            <div class="card">
                                <div class="d-flex justify-content-between p-3">
                                    <p class="lead mb-0">@item.ProductName</p>
                                    <div class="bg-info rounded-circle d-flex align-items-center justify-content-center shadow-1-strong"
                                         style="width: 35px; height: 35px;">
                                        <p class="text-white mb-0 small">x3</p>
                                    </div>
                                </div>
                                <img src="@pd.Image" width="80px" height="180px"
                                     class="card-img-top" alt="Gaming Laptop" />
                                 <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <p class="small"><a href="#!" class="text-muted"></a></p>
                                        <p class="small text-danger pri"><s>
                                                
                                                    @(Math.Round(pd.Price + 500))
                                               
                                        </s></p>
                                    </div>
                                    
                                    <div class="d-flex justify-content-between mb-3">
                                        <h5 class="mb-0" style="max-width: 150px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap">@pd.Description</h5>
                                        <h5 class="text-dark mb-0">
                                            @(Math.Round(pd.Price))
                                            </h5>
                                    </div>

                                    <div class="d-flex justify-content-between mb-2">
                                        <a asp-action="Detailsp" asp-route-id="@pd.Id" class="text-dark fw-bold text-decoration-none">التفاصيل</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                
            }
            

        </div>
    </div>
</section>